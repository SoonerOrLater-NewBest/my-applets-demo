.video-panel {
  left: 0;
  right: 0;
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  background: transparent;
  z-index: 100000;
}

.play {
  width: 150rpx;
  height: 150rpx;
  z-index: 200000;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}

.swiper-container {
  width: 750rpx;
  height: 500rpx;
  position: relative;
}

.swiper_box {
  width: 100%;
  height: 100%;
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height: 100%;
}

.swiper-container .dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.swiper-container .dots .dot {
  margin: 0 12rpx;
  background: #fff7f7;
  font-size: 24rpx;
  color: #666;
  border-radius: 30rpx;
  padding: 3rpx 22rpx;
  transition: all 0.6s;
}

.swiper-container .dots .dot.active {
  background: var(--color-sub-theme);
  color: #fff;
}
